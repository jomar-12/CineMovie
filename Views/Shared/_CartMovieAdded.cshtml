@model IEnumerable<CineMovie.ViewModels.MovieCartViewModel>

@if (Model != null)
{
    if (Model.Count() > 0)
    {
        foreach (var cartmovie in Model)
        {
            <div id="@("media-" + cartmovie.MovieCartId)">
                <div class="media">
                    <img src="@cartmovie.Poster" class="mr-3 w-25" alt="movie img">
                    <div class="media-body">
                        <div class="d-flex">
                            <h5 class="mt-0">@cartmovie.Title</h5>
                            <small data-parentid="@("media-" + cartmovie.MovieCartId)" data-movieid="@cartmovie.MovieCartId" class="smallRemoveFromCart text-muted ml-auto pl-3 mr-2 pointer">remove</small>
                        </div>
                        <small class="text-muted">Rent price: @cartmovie.RentPrice.ToString("C2")</small>
                    </div>
                </div>

                <hr />
            </div>
        }
    }
    else
    {
        <div class="alert alert-warning">Cart is empty.</div>
    }
}
