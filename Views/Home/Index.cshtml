@{
    ViewBag.Title = "Home Page";
}

<style>
    body {
        padding-top: 0;
        background-color: #1c2331 !important;
    }

    #renderBody{
        margin-bottom:0 !important;
    }
</style>

<div style="height: 150px; background-color: red; clip-path: polygon(0 0, 100% 0, 100% 100%, 0 38%);">
</div>
<p class="display-4 text-center text-white">Welcome to Cine Movie</p>

<!--Carousel Wrapper-->
<div id="video-carousel-example2" data-interval="false" class="carousel slide carousel-fade" data-ride="carousel">
    <!--Indicators-->
    <ol class="carousel-indicators">
        <li data-target="#video-carousel-example2" data-slide-to="0" class="active"></li>
        <li data-target="#video-carousel-example2" data-slide-to="1"></li>
        <li data-target="#video-carousel-example2" data-slide-to="2"></li>
    </ol>
    <!--/.Indicators-->
    <!--Slides-->
    <div class="carousel-inner" role="listbox">
        <!-- First slide -->
        <div class="carousel-item active">
            <!--Mask color-->
            <div class="view">
                <!--Video source-->
                <video class="video-fluid" autoplay loop>
                    <source src="https://localhost:44374/content/videos/piratesofcaribbean.mp4" type="video/mp4" />
                </video>
                <div class="mask rgba-indigo-light"></div>
            </div>

            <!--Caption-->
            <div class="carousel-caption">
                <div class="animated fadeInDown">
                    <h3 class="h3-responsive">Pirates of the caribbean</h3>
                </div>
            </div>
            <!--Caption-->
        </div>
        <!-- /.First slide -->
        <!-- Second slide -->
        <div class="carousel-item">
            <!--Mask color-->
            <div class="view">
                <!--Video source-->
                <video class="video-fluid" autoplay loop muted>
                    <source src="https://localhost:44374/content/videos/avengers.mp4" type="video/mp4" />
                </video>
                <div class="mask rgba-purple-slight"></div>
            </div>

            <!--Caption-->
            <div class="carousel-caption">
                <div class="animated fadeInDown">
                    <h3 class="h3-responsive">The Avengers</h3>
                </div>
            </div>
            <!--Caption-->
        </div>
        <!-- /.Second slide -->
        <!-- Third slide -->
        <div class="carousel-item">
            <!--Mask color-->
            <div class="view">
                <!--Video source-->
                <video class="video-fluid" autoplay loop muted>
                    <source src="https://localhost:44374/content/videos/blackwidow.mp4" type="video/mp4" />
                </video>
                <div class="mask rgba-black-strong"></div>
            </div>

            <!--Caption-->
            <div class="carousel-caption">
                <div class="animated fadeInDown">
                    <h3 class="h3-responsive">The Black Widow</h3>
                </div>
            </div>
            <!--Caption-->
        </div>
        <!-- /.Third slide -->
    </div>
    <!--/.Slides-->
    <!--Controls-->
    <a class="carousel-control-prev" href="#video-carousel-example2" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#video-carousel-example2" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->
</div>
<!--Carousel Wrapper-->